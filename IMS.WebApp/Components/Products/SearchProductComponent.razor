<div class="input-group">
    <input
        type="text"
        class="form-control"
        placeholder="Type product name here to search"
        @bind-value="productNameToSeach"
    />
    <button
        type="button"
        class="btn-success input-group-text"
        @onclick="OnSearch"
    >Search</button>
</div>

@code {
    private string productNameToSeach = string.Empty;

    [Parameter]
    public EventCallback<string> OnSearchProduct { get; set; }

    private void OnSearch()
    {
        OnSearchProduct.InvokeAsync(productNameToSeach);
    }

}
